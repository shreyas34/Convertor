<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/valueEditText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="enter the value in mililitres" />
    <Button
        android:id="@+id/convertrstousdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="convert to USD"/>
    <TextView
        android:id="@+id/rstousdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/convertrstopoundsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="convert to Pounds"/>
    <TextView
        android:id="@+id/rstopoundsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>