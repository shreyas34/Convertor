<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    tools:context="loginapp.com.converter.MainActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose your conversion"/>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/conversion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="meters to cm"/>
    <Button
        android:id="@+id/conversion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kg to grams"

        />
    <Button
        android:id="@+id/conversion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="litres to mililitres"
       />


</LinearLayout>
